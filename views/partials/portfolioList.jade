ul(id='portfolio-list')
	li(ng-repeat='portfolioItem in portfolioItems')
		a(href='/#/portfolio/{{portfolioItem._id}}/{{portfolioItem.title}}') 
			span(class='large-font') {{portfolioItem.title}}

		p(class='top-margin', ng-bind-html-unsafe="portfolioItem.description")
		ul(class='pull-right')
			button(class='edit-btn btn btn-danger btn-mini', ng-click="DeletePortfolioItem($event, portfolioItem._id)") Delete
			a(class='edit-btn btn btn-mini btn btn btn-primary', href='/#/portfolio/{{portfolioItem._id}}/{{portfolioItem.name}}/edit') Edit
		br
		hr
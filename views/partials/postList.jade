ul(id='posts-list')
	li(ng-repeat='post in posts')
		a(href='/#/post/{{post._id}}/{{post.title}}') 
			span(class='large-font') {{post.title}}
		div(class="pull-right")
			span {{post.date}}
			br
			span(class='pull-right') {{post.author}}


		p(class='top-margin', ng-bind-html-unsafe="post.body")

		hr